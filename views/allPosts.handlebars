<ul class="list-group">
  <h1 class="mt-5 pt-3 text-center">Posts</h1>
  {{#each posts as |post|}}
    <li class="list-group-item">
      <h2>{{post.title}}</h2>
      <article class="post-article">
        <div class="d-flex">
          <div class="single">
            {{{post.body}}}
          </div>
        </div>
        <p>Created By: {{post.user.username}}</p>
        <a class="btn btn-primary" href="/posts/{{post.id}}">View</a>
      </article>
    </li>
  {{/each}}
</ul>
<style>
  .ql-editor { overflow: hidden; }
</style>